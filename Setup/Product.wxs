<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">

	<Product Id="E8803C96-7C07-460B-8D9C-5EEC242D7DFE" Name="Silver Monkey" Language="1033" Version="1.0.0.0" Manufacturer="Me" UpgradeCode="A709F3A0-BEE3-403E-AC47-1FE1AD189C77">
    <Package InstallerVersion="200" Compressed="yes" InstallScope="perMachine" />

    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is alreaady installed." />
    <Media Id="1" Cabinet="SilverMonkey.cab" EmbedCab="yes" CompressionLevel="High"/>
 	
       <Directory Id="TARGETDIR" Name="SourceDir">
            <Directory Id="ProgramFilesFolder">
                <Directory Id="INTALLFOLDER" Name="Silver Monkey"/>
            </Directory>
            <!-- Step 1: Define the directory structure -->
            <Directory Id="ProgramMenuFolder">
                <Directory Id="ApplicationProgramsFolder" Name="My Application Name"/>
            </Directory>
        </Directory>

        <DirectoryRef Id="INSTALLFOLDER">
            <Component Id="SilverMonkey.exe" Guid="*">
                <File Id="myapplication.exe" Source="$(var.SilverMonkey2.TargetName)" KeyPath="yes" Checksum="yes"/>
            </Component>
        </DirectoryRef>

        <!-- Step 2: Add the shortcut to your installer package -->
        <DirectoryRef Id="ApplicationProgramsFolder">
            <Component Id="SilverMonkey2Shortcut" Guid="*">
                <Shortcut Id="ApplicationStartMenuShortcut" 
                     Name="Silver Monkey" 
                   Description="My Application Description"
                    Target="$(var.SilverMonkey2.TargetFileName)"
                          WorkingDirectory="INSTALLFOLDER"/>
                <RemoveFolder Id="ApplicationProgramsFolder" On="uninstall"/>
                <RegistryValue Root="HKCU" Key="Software\Microsoft\MyApplicationName" Name="installed" Type="integer" Value="1" KeyPath="yes"/>
           </Component>
        </DirectoryRef>
</Product>
        <Feature Id="MainApplication" Title="Main Application" Level="1">
            <ComponentRef Id="SilverMonkey2.exe" />
        	<ComponentRef Id="SilverMonkey2.Binaries" />
        	<ComponentRef Id="SilverMonkey2.Content" />
            <!-- Step 3: Tell WiX to install the shortcut -->
            <ComponentRef Id="SilverMonkey2Shortcut" />   
        </Feature>

	
	
